<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Chef"
        x:DataType="vm:OrdersViewModel"
        x:Class="cafeInformationSystem.Views.Chef.OrdersWindow"
        Title="Список заказов повара"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:OrdersViewModel/>
  </Design.DataContext>
  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно в меню повара" Command="{Binding BackToChefMenuCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основной контент -->
    <Grid Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="10"/>
        <ColumnDefinition Width="0.75*"/>
      </Grid.ColumnDefinitions>
      <!-- Блок фильтрации -->
      <Border Grid.Column="0" Background="#6F4E37" CornerRadius="5" Padding="15">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <StackPanel Spacing="10">
            <TextBlock Text="Фильтрация заказов" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
            <!-- Код заказа -->
            <TextBlock Text="Код заказа:" FontWeight="SemiBold" Foreground="White"/>
            <TextBox Text="{Binding OrderCodeFilter}" Watermark="Введите код заказа"/>
            <!-- Дата создания с -->
            <TextBlock Text="Дата создания с:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding MinCreatedAtFilter}"/>
            <!-- Дата создания до -->
            <TextBlock Text="Дата создания до:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <DatePicker SelectedDate="{Binding MaxCreatedAtFilter}"/>
            <!-- Количество клиентов от -->
            <TextBlock Text="Количество клиентов от:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <TextBox Text="{Binding MinAmountClientsFilter}" Watermark="Минимальное количество"/>
            <!-- Количество клиентов до -->
            <TextBlock Text="Количество клиентов до:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <TextBox Text="{Binding MaxAmountClientsFilter}" Watermark="Максимальное количество"/>
            <!-- Статус готовности -->
            <TextBlock Text="Статус готовности:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding AvailableStatusCookingOrder}" 
                      SelectedItem="{Binding SelectedStatusCookingOrderFilter}"
                      DisplayMemberBinding="{Binding Name}"/>
            <!-- Статус занятости поваром -->
            <TextBlock Text="Статус занятости поваром:" FontWeight="SemiBold" Foreground="White" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding AvailableAcceptedChefStatusOrder}" 
                      SelectedItem="{Binding SelectedAcceptedChefStatusFilter}"
                      DisplayMemberBinding="{Binding Name}"/>
            <!-- Ошибки фильтрации -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                      TextWrapping="Wrap" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <!-- Кнопка применения фильтров -->
            <Button Content="Применить фильтры" 
                    Command="{Binding ApplyFiltersCommand}"
                    Background="DarkOrchid" 
                    Foreground="White"
                    HorizontalAlignment="Stretch"
                    Margin="0,20,0,0"
                    Padding="10,5"/>
          </StackPanel>
        </ScrollViewer>
      </Border>
      <!-- Блок списка заказов -->
      <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Background="#6F4E37">
        <Border Margin="30" Background="#6F4E37" CornerRadius="5">
          <StackPanel Spacing="10" Background="#6F4E37">
            <!-- Если список пуст -->
            <TextBlock Text="Список пуст" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,50,0,0"
                      IsVisible="{Binding HasNoOrders}"/>
            <!-- Список заказов -->
            <ItemsControl ItemsSource="{Binding Orders}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Background="#666666" 
                          BorderThickness="1" 
                          CornerRadius="5" 
                          Padding="15"
                          Margin="0,0,0,10">
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                      <!-- Информация о заказе -->
                      <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <!-- Код заказа -->
                        <TextBlock Text="{Binding OrderCode, StringFormat='Код заказа: {0}'}" 
                                   FontSize="14" FontWeight="Bold" Foreground="White"/>
                        <!-- Время начала -->
                        <TextBlock Text="{Binding CreatedAt, StringFormat='Время начала: {0:dd.MM.yyyy HH:mm}'}" 
                                   FontSize="12" Foreground="White"/>
                        <!-- Логин официанта -->
                        <TextBlock Text="{Binding Waiter.Username, StringFormat='Официант: {0}'}" 
                                   FontSize="12" Foreground="White"/>
                        <!-- Занять кем-то либо мной -->
                        <TextBlock Text="{Binding Chef.Username, StringFormat='Повар: {0}', FallbackValue='Повар: Не назначен'}" 
                                   FontSize="12" Foreground="White"/>
                        <!-- Количество клиентов -->
                        <TextBlock Text="{Binding AmountClients, StringFormat='Количество клиентов: {0}'}" 
                                   FontSize="12" Foreground="White"/>
                        <!-- Статус готовности -->
                        <CheckBox IsEnabled="False" 
                                  IsChecked="{Binding CookingStatus}"
                                  Content="Готов"
                                  FontSize="12"
                                  Foreground="White"/>
                      </StackPanel>
                      <!-- Кнопка перехода к карточке заказа -->
                      <Button Grid.Column="2" 
                              Content="Посмотреть карточку" 
                              Command="{Binding $parent[ItemsControl].DataContext.OpenOrderCardCommand}"
                              CommandParameter="{Binding OrderCode}"
                              Background="DarkOrchid"
                              Foreground="White"
                              BorderThickness="1"
                              Padding="10,5"/>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</Window>