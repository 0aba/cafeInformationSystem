<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Chef"
        x:DataType="vm:ChefMenuViewModel"
        x:Class="cafeInformationSystem.Views.Chef.ChefMenuWindow"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        Title="Меню повара"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:ChefMenuViewModel/>
  </Design.DataContext>
    <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Основной контент -->
    <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
      <StackPanel Margin="40" Spacing="30">
        <!-- Заголовок -->
        <TextBlock Text="Панель повара" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Foreground="#6F4E37"/>
        <!-- Плитки с функциями -->
        <WrapPanel HorizontalAlignment="Center" Margin="20">
          <!-- Плитка заказы -->
          <Border Width="200" Height="150" 
                  Background="#8B4513" 
                  CornerRadius="10"
                  Cursor="Hand"
                  Margin="15"
                  RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
              <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Border.RenderTransform>
            <Border.Styles>
              <Style Selector="Border:pointerover">
                <Setter Property="RenderTransform">
                  <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                </Setter>
              </Style>
            </Border.Styles>
            <Button Command="{Binding NavigateToOrdersCommand}"
                    Background="Transparent" 
                    BorderThickness="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center">
              <StackPanel HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Spacing="15"
                          Width="200">
                <Path Data="M12,13A5,5 0 0,1 7,8H9A3,3 0 0,0 12,11A3,3 0 0,0 15,8H17A5,5 0 0,1 12,13M12,3A3,3 0 0,1 15,6H9A3,3 0 0,1 12,3M19,6H17A5,5 0 0,0 12,1A5,5 0 0,0 7,6H5C3.89,6 3,6.89 3,8V20A2,2 0 0,0 5,22H19A2,2 0 0,0 21,20V8C21,6.89 20.1,6 19,6Z"
                      Fill="White" 
                      Width="50" 
                      Height="50"
                      Stretch="Uniform"
                      HorizontalAlignment="Center"
                      Margin="0"/>
                <TextBlock Text="Заказы" 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
              </StackPanel>
            </Button>
          </Border>
        </WrapPanel>
      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</Window>