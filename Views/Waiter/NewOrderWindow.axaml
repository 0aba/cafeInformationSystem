<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Waiter"
        x:DataType="vm:NewOrderViewModel"
        x:Class="cafeInformationSystem.Views.Waiter.NewOrderWindow"
        Title="Создать заказ"
        WindowStartupLocation="CenterScreen"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:NewOrderViewModel/>
  </Design.DataContext>
  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно к заказам" Command="{Binding BackToOrdersCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основная форма -->
    <Border Background="#6F4E37" CornerRadius="5" Margin="20">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="15" VerticalAlignment="Top">
          <!-- Заголовок -->
          <TextBlock Text="Создать заказ" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
          <!-- Основные поля -->
          <Grid ColumnDefinitions="155,*" RowDefinitions="*,*,*,*" VerticalAlignment="Top" RowSpacing="10">
            <!-- Код заказа -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Код заказа:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" Watermark="Введите код заказа" Text="{Binding OrderCode}"/>
            <!-- Количество клиентов -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Количество клиентов:" VerticalAlignment="Center" Foreground="White"/>
            <NumericUpDown Grid.Row="1" Grid.Column="1" Minimum="1" Maximum="32767" Increment="1"
                           Value="{Binding AmountClients, Mode=TwoWay}"
                           FormatString="N0" ParsingNumberStyle="Integer" Watermark="1"/>
            <!-- Код столика -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Код столика:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="2" Grid.Column="1" Watermark="Введите код столика" Text="{Binding TableCode}"/>
            <!-- Примечание -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Примечание:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="3" Grid.Column="1" Watermark="Введите примечание к заказу" Text="{Binding Note}" 
                     AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
          </Grid>
          <!-- Секция позиций заказа -->
          <Border Background="#8B7355" CornerRadius="5" Padding="15" Margin="0,10">
            <StackPanel Spacing="10">
              <TextBlock Text="Позиции заказа:" FontSize="16" Foreground="White"/>
              <!-- Таблица позиций заказа -->
              <DataGrid ItemsSource="{Binding OrderItemItemTable}" 
                       AutoGenerateColumns="False"
                       IsReadOnly="False"
                       CanUserReorderColumns="False"
                       CanUserResizeColumns="True"
                       CanUserSortColumns="False"
                       GridLinesVisibility="All"
                       Background="Black"
                       Height="200"
                       SelectedItem="{Binding SelectedOrderItem}">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Название позиции" 
                                    Binding="{Binding Name}" 
                                    Width="*"/>
                  <DataGridTextColumn Header="Количество" 
                                    Binding="{Binding AmountItems}" 
                                    Width="150"/>
                </DataGrid.Columns>
              </DataGrid>
              <TextBlock Text="Добавьте позиции в таблицу выше. Нажмите на пустую строку для добавления новой позиции." 
                        FontSize="12" 
                        Foreground="LightGray" 
                        TextWrapping="Wrap"/>
            </StackPanel>
          </Border>
          <!-- Кнопки управления позициями -->
          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Добавить позицию" 
                    Command="{Binding AddOrderItemCommand}"
                    Background="Green" 
                    Foreground="White"
                    Padding="10,5"/>
            <Button Content="Удалить выделенную" 
                    Command="{Binding RemoveSelectedOrderItemCommand}"
                    Background="Red" 
                    Foreground="White"
                    Padding="10,5"/>
          </StackPanel>
          <!-- Сообщение об ошибке -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                    TextWrapping="Wrap" HorizontalAlignment="Center"
                    FontWeight="Bold"/>
          <!-- Кнопка Создать -->
          <Button Content="Создать заказ" Command="{Binding CreateOrderCommand}" 
                  HorizontalAlignment="Center" Width="150" Height="35" 
                  Background="DarkOrchid" Foreground="White"
                  Margin="0,20"/>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>