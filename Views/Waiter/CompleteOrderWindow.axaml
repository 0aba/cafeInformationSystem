<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Waiter"
        x:DataType="vm:CompleteOrderViewModel"
        x:Class="cafeInformationSystem.Views.Waiter.CompleteOrderWindow"
        Title="Завершение заказа"
        WindowStartupLocation="CenterScreen"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  
  <Design.DataContext>
    <vm:CompleteOrderViewModel/>
  </Design.DataContext>

  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно" Command="{Binding BackToOrderCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    
    <!-- Основная форма -->
    <Border Background="#6F4E37" CornerRadius="5" Margin="20">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="15" VerticalAlignment="Top">
          
          <!-- Заголовок -->
          <TextBlock Text="Завершение заказа" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
          
          <!-- Основные поля -->
          <Grid ColumnDefinitions="150,*" RowDefinitions="*,*" VerticalAlignment="Top" RowSpacing="10">
            
            <!-- Код заказа (нередактируемый) -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Код заказа:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding OrderCode}" IsReadOnly="True" Background="LightGray"/>
            
            <!-- Сумма к оплате (нередактируемый) -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Сумма к оплате:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CostToPay, StringFormat='{}{0:N2} руб.'}" IsReadOnly="True" Background="LightGray"/>
            
          </Grid>
          
          <!-- Секция кассовых ордеров -->
          <Border Background="#8B7355" CornerRadius="5" Padding="15" Margin="0,10">
            <StackPanel Spacing="10">
              <TextBlock Text="Оплаты:" FontSize="16" Foreground="White"/>
              
              <!-- Таблица кассовых ордеров -->
              <DataGrid ItemsSource="{Binding CashReceiptOrderItemTable}" 
                       AutoGenerateColumns="False"
                       IsReadOnly="False"
                       CanUserReorderColumns="False"
                       CanUserResizeColumns="True"
                       CanUserSortColumns="False"
                       GridLinesVisibility="All"
                       Background="Black"
                       Height="200"
                       SelectedItem="{Binding SelectedCashReceiptOrderItem}">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Сумма оплаты" 
                                      Binding="{Binding PaymentAmount, StringFormat='{}{0:N2}'}" 
                                      Width="*"/>
                  <DataGridCheckBoxColumn Header="Тип оплаты (безналичный/наличные)" 
                                          Binding="{Binding TypePay}"
                                          Width="300"/>
                </DataGrid.Columns>
              </DataGrid>
              
              <TextBlock Text="Добавьте способы оплаты в таблицу выше. Нажмите на пустую строку для добавления новой оплаты." 
                        FontSize="12" 
                        Foreground="LightGray" 
                        TextWrapping="Wrap"/>
            </StackPanel>
          </Border>

          <!-- Кнопки управления оплатами -->
          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Добавить оплату" 
                    Command="{Binding AddCashReceiptOrderItemCommand}"
                    Background="Green" 
                    Foreground="White"
                    Padding="10,5"/>
            <Button Content="Удалить выделенную" 
                    Command="{Binding RemoveSelectedCashReceiptOrderItemCommand}"
                    Background="Red" 
                    Foreground="White"
                    Padding="10,5"/>
          </StackPanel>
          
          <!-- Сообщение об ошибке -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                    TextWrapping="Wrap" HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Margin="0,10"/>
          
          <!-- Кнопка Завершить заказ -->
          <Button Content="Завершить заказ" Command="{Binding CompleteOrderCommand}" 
                  HorizontalAlignment="Center" Width="150" Height="35" 
                  Background="DarkOrchid" Foreground="White"
                  Margin="0,20"/>
          
        </StackPanel>
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>