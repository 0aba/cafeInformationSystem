<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Administrator"
        x:DataType="vm:EmployeesViewModel"
        x:Class="cafeInformationSystem.Views.Administrator.EmployeesWindow"
        Title="Список сотрудников"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">

  <Design.DataContext>
    <vm:EmployeesViewModel/>
  </Design.DataContext>

  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно в меню администратора" Command="{Binding BackToAdministratorMenuCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
      <Button Content="Создать карточку сотрудника" Command="{Binding NewEmployeeCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основной контент -->
    <Grid Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="10"/>
        <ColumnDefinition Width="0.75*"/>
      </Grid.ColumnDefinitions>
      <!-- Блок фильтрации -->
      <Border Grid.Column="0" Background="#6F4E37" CornerRadius="5" Padding="15">
        <StackPanel Spacing="10">
          <TextBlock Text="Фильтрация сотрудников" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
          <!-- Имя -->
          <TextBlock Text="Имя:" FontWeight="SemiBold"/>
          <TextBox Text="{Binding FirstNameFilter}" Watermark="Введите имя"/>
          <!-- Фамилия -->
          <TextBlock Text="Фамилия:" FontWeight="SemiBold" Margin="0,10,0,0"/>
          <TextBox Text="{Binding LastNameFilter}" Watermark="Введите фамилию"/>
          <!-- Отчество -->
          <TextBlock Text="Отчество:" FontWeight="SemiBold" Margin="0,10,0,0"/>
          <TextBox Text="{Binding MiddleNameFilter}" Watermark="Введите отчество"/>
          <!-- Логин -->
          <TextBlock Text="Логин:" FontWeight="SemiBold" Margin="0,10,0,0"/>
          <TextBox Text="{Binding UsernameFilter}" Watermark="Введите логин"/>
          <!-- Роль -->
          <TextBlock Text="Роль:" FontWeight="SemiBold" Margin="0,10,0,0"/>
          <ComboBox ItemsSource="{Binding AvailableRoles}" 
                    SelectedItem="{Binding SelectedRoleFilter}"
                    DisplayMemberBinding="{Binding Name}"/>
          <!-- Статус работы -->
          <CheckBox Content="Активные сотрудники" 
                    IsChecked="{Binding WorkStatusFilter}"
                    Margin="0,10,0,0"/>
          <!-- Ошибки списка -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                     TextWrapping="Wrap" HorizontalAlignment="Center"/>
          <!-- Кнопка применения фильтров -->
          <Button Content="Применить фильтры" 
                  Command="{Binding ApplyFiltersCommand}"
                  Background="DarkOrchid" 
                  Foreground="White"
                  HorizontalAlignment="Stretch"
                  Margin="0,20,0,0"
                  Padding="10,5"/>
        </StackPanel>
      </Border>
      <!-- Блок списка сотрудников -->
      <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Background="#6F4E37">
        <Border Margin="30" Background="#6F4E37" CornerRadius="5">
          <StackPanel Spacing="10" Background="#6F4E37">
            <!-- Если список пуст -->
            <TextBlock Text="Список пуст" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,50,0,0"
                      IsVisible="{Binding HasNoEmployees}"/>
            <!-- Список сотрудников -->
            <ItemsControl ItemsSource="{Binding Employees}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Background="#666666" 
                          BorderThickness="1" 
                          CornerRadius="5" 
                          Padding="15"
                          Margin="0,0,0,10">
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                      <!-- Информация -->
                      <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FullName, StringFormat='ФИО: {0}'}" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="{Binding Username, StringFormat='Логин: {0}'}" FontSize="12" Foreground="Black"/>
                        <TextBlock Text="{Binding RoleName, StringFormat='Роль: {0}'}" FontSize="12" Foreground="Black"/>
                      </StackPanel>
                      <!-- Кнопка перехода в карточку сотрудника -->
                      <Button Grid.Column="2" 
                              Content="Посмотреть карточку" 
                              Command="{Binding $parent[ItemsControl].DataContext.OpenEmployeeCardCommand}"
                              CommandParameter="{Binding Username}"
                              Background="DarkOrchid"
                              Foreground="White"
                              BorderThickness="1"
                              Padding="10,5"/>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</Window>