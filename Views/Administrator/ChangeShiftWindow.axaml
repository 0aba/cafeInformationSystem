<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Administrator"
        x:DataType="vm:ChangeShiftViewModel"
        x:Class="cafeInformationSystem.Views.Administrator.ChangeShiftWindow"
        Title="Изменить смену"
        WindowStartupLocation="CenterScreen"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  
  <Design.DataContext>
    <vm:ChangeShiftViewModel/>
  </Design.DataContext>

  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно к списку смен" Command="{Binding BackToShiftsCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    
    <!-- Основная форма -->
    <Border Background="#6F4E37" CornerRadius="5" Margin="20">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="15" VerticalAlignment="Top">
          
          <!-- Заголовок -->
          <TextBlock Text="Изменить смену" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
          
          <!-- Основные поля -->
          <Grid ColumnDefinitions="150,*" RowDefinitions="*,*,*,*,*" VerticalAlignment="Top" RowSpacing="10">
            
            <!-- Код смены -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Код смены:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" Watermark="Введите код смены" Text="{Binding ShiftCode}"/>
            
            <!-- Дата смены -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата смены:" VerticalAlignment="Center" Foreground="White"/>
            <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding DateShift}"/>
            
            <!-- Время начала смены -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Время начала:" VerticalAlignment="Center" Foreground="White"/>
            <TimePicker Grid.Row="2" Grid.Column="1" SelectedTime="{Binding StartShift}"/>
            
            <!-- Время окончания смены -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Время окончания:" VerticalAlignment="Center" Foreground="White"/>
            <TimePicker Grid.Row="3" Grid.Column="1" SelectedTime="{Binding EndShift}"/>
            
          </Grid>
          
          <!-- Секция сотрудников -->
          <Border Background="#8B7355" CornerRadius="5" Padding="15" Margin="0,10">
            <StackPanel Spacing="10">
              <TextBlock Text="Сотрудники смены (4-7 человек):" FontSize="16" Foreground="White"/>
              
              <!-- Таблица сотрудников с возможностью редактирования -->
              <DataGrid ItemsSource="{Binding EmployeeShiftTable}" 
                       AutoGenerateColumns="False"
                       IsReadOnly="False"
                       CanUserReorderColumns="False"
                       CanUserResizeColumns="True"
                       CanUserSortColumns="False"
                       GridLinesVisibility="All"
                       Background="Black"
                       Height="200"
                       SelectedItem="{Binding SelectedEmployee}">
                <DataGrid.Columns>
                  <DataGridTextColumn Header="Логин сотрудника" 
                                    Binding="{Binding Username}" 
                                    Width="*"/>
                </DataGrid.Columns>
              </DataGrid>
              
              <TextBlock Text="Добавьте сотрудников в таблицу выше. Нажмите на пустую строку для добавления нового сотрудника." 
                        FontSize="12" 
                        Foreground="LightGray" 
                        TextWrapping="Wrap"/>
            </StackPanel>
          </Border>

          <!-- Кнопки управления -->
          <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Добавить строку" 
                    Command="{Binding AddEmployeeCommand}"
                    Background="Green" 
                    Foreground="White"
                    Padding="10,5"/>
            <Button Content="Удалить выделенную" 
                    Command="{Binding RemoveSelectedEmployeeCommand}"
                    Background="Red" 
                    Foreground="White"
                    Padding="10,5"/>
          </StackPanel>
          
          <!-- Сообщение об ошибке -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                    TextWrapping="Wrap" HorizontalAlignment="Center"
                    FontWeight="Bold"/>
          
          <!-- Кнопка Изменить -->
          <Button Content="Изменить смену" Command="{Binding ChangeShiftCommand}" 
                  HorizontalAlignment="Center" Width="150" Height="35" 
                  Background="DarkOrchid" Foreground="White"
                  Margin="0,20"/>
          
        </StackPanel>
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>