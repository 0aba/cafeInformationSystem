<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Administrator"
        x:DataType="vm:ChangeEmployeeViewModel"
        x:Class="cafeInformationSystem.Views.Administrator.ChangeEmployeeWindow"
        Title="Карточка сотрудника"
        WindowStartupLocation="CenterScreen"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:ChangeEmployeeViewModel/>
  </Design.DataContext>
  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно к списку сотрудников" Command="{Binding BackToEmployeesCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основная форма -->
    <Border Background="#6F4E37" CornerRadius="5" Margin="20">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="15" VerticalAlignment="Top">
          <!-- Заголовок -->
          <TextBlock Text="Карточка сотрудника" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
          <!-- Основные поля -->
          <Grid ColumnDefinitions="150,*" RowDefinitions="*,*,*,*,*,*,*,*,*,*" VerticalAlignment="Top">
            <!-- Имя -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" Watermark="Изменить имя" Text="{Binding FirstName}"/>
            <!-- Фамилия -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="1" Grid.Column="1" Watermark="Изменить фамилию" Text="{Binding LastName}"/>
            <!-- Отчество -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="2" Grid.Column="1" Watermark="Изменить отчество" Text="{Binding MiddleName}"/>
            <!-- Фото -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Фото сотрудника:" VerticalAlignment="Top" Foreground="White" Margin="0,10,0,0"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0" Spacing="10">
                <!-- Просмотр -->
                <Border BorderBrush="LightGray" BorderThickness="1" 
                        Width="100" Height="100" Background="DarkGray">
                    <Image Source="{Binding PhotoImage}" Stretch="Uniform"/>
                </Border>
                <!-- Редактирование -->
                <Border BorderBrush="LightGray" BorderThickness="2" 
                        Background="#5A4A37" CornerRadius="5"
                        Width="200" Height="150"
                        DragDrop.AllowDrop="True"
                        DragDrop.Drop="OnPhotoDrop"
                        DragDrop.DragOver="OnDragOver">
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Spacing="10">
                        <TextBlock x:Name="PhotoText" 
                                  Text="Перетащите фото сюда" 
                                  HorizontalAlignment="Center" 
                                  Foreground="LightGray"/>
                        <TextBlock Text="или" 
                                  HorizontalAlignment="Center" 
                                  Foreground="LightGray"/>
                        <Button Content="Выбрать файл" 
                                Click="SelectPhotoButton_Click"
                                HorizontalAlignment="Center"
                                Background="DarkOrchid" 
                                Foreground="White"/>
                        <TextBlock Text="PNG, JPG, JPEG" 
                                  HorizontalAlignment="Center" 
                                  Foreground="Gray" 
                                  FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!-- Договор -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Скан договора:" VerticalAlignment="Top" Foreground="White" Margin="0,10,0,0"/>
            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0" Spacing="10">
                <!-- Просмотр -->
                <Border BorderBrush="LightGray" BorderThickness="1" 
                        Width="150" Height="100" Background="DarkGray">
                    <Image Source="{Binding ContractImage}" Stretch="Uniform"/>
                </Border>
                <!-- Редактирование -->
                <Border BorderBrush="LightGray" BorderThickness="2" 
                        Background="#5A4A37" CornerRadius="5"
                        Width="200" Height="150"
                        DragDrop.AllowDrop="True"
                        DragDrop.Drop="OnContractDrop"
                        DragDrop.DragOver="OnDragOver">
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Spacing="10">
                        <TextBlock x:Name="ContractText" 
                                  Text="Перетащите скан договора" 
                                  HorizontalAlignment="Center" 
                                  Foreground="LightGray"/>
                        <TextBlock Text="или" 
                                  HorizontalAlignment="Center" 
                                  Foreground="LightGray"/>
                        <Button Content="Выбрать файл" 
                                Click="SelectContractButton_Click"
                                HorizontalAlignment="Center"
                                Background="DarkOrchid" 
                                Foreground="White"/>
                        <TextBlock Text="PNG, JPG, JPEG" 
                                  HorizontalAlignment="Center" 
                                  Foreground="Gray" 
                                  FontSize="10"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            <!-- Логин (Только чтение) -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Логин:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="5" Grid.Column="1" Watermark="Логин" Text="{Binding Username}" 
                     IsReadOnly="True"/>
            <!-- Новый пароль -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Новый пароль:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="6" Grid.Column="1" Watermark="Введите новый пароль (необязательно)" 
                     PasswordChar="*" Text="{Binding NewPassword}"/>
            <!-- Подтверждение пароля -->
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Подтверждение пароля:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="7" Grid.Column="1" Watermark="Повторите новый пароль" 
                     PasswordChar="*" Text="{Binding ConfirmPassword}"/>
            <!-- Роль -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Изменить роль:" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox Grid.Row="8" Grid.Column="1" 
                      ItemsSource="{Binding AvailableRoles}"
                      SelectedItem="{Binding SelectedRoleFilter}"
                      DisplayMemberBinding="{Binding Name}"/>
            <!-- Роль -->
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Изменить роль:" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox Grid.Row="8" Grid.Column="1" 
                      ItemsSource="{Binding AvailableRoles}"
                      SelectedItem="{Binding SelectedRoleFilter}"
                      DisplayMemberBinding="{Binding Name}"/>
            <!-- статус работы -->
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Статус работы:" VerticalAlignment="Center" Foreground="White"/>
            <CheckBox Grid.Row="9" Grid.Column="1" Content="Активный сотрудник" 
                      IsChecked="{Binding WorkStatus}" VerticalAlignment="Center" Foreground="White"/>
          </Grid>
          <!-- Сообщение об ошибке -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                    TextWrapping="Wrap" HorizontalAlignment="Center"/>
          <!-- Кнопка Сохранить -->
          <Button Content="Сохранить изменения" Command="{Binding ChangeEmployeeCommand}" 
                  HorizontalAlignment="Center" Width="200" Height="35" 
                  Background="DarkOrchid" Foreground="White"/>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>