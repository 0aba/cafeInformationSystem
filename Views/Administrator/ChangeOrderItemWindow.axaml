<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Administrator"
        xmlns:aui="https://github.com/avaloniaui"
        x:DataType="vm:ChangeOrderItemViewModel"
        x:Class="cafeInformationSystem.Views.Administrator.ChangeOrderItemWindow"
        Title="Карточка товара"
        WindowStartupLocation="CenterScreen"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:ChangeOrderItemViewModel/>
  </Design.DataContext>
  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно к списку товаров" Command="{Binding BackToOrderItemsCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основная форма -->
    <Border Background="#6F4E37" CornerRadius="5" Margin="20">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" Spacing="15" VerticalAlignment="Top">
          <!-- Заголовок -->
          <TextBlock Text="Карточка товара" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
          <!-- Основные поля -->
          <Grid ColumnDefinitions="200,*" RowDefinitions="*,*,*" VerticalAlignment="Top" HorizontalAlignment="Center" RowSpacing="15">
            <!-- Дата создания (Только чтение) -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата создания:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding CreatedAt, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" 
                     IsReadOnly="True"
                     Background="#888888"
                     Foreground="White"
                     Width="300"/>
            <!-- Название товара -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Название товара:" VerticalAlignment="Center" Foreground="White"/>
            <TextBox Grid.Row="1" Grid.Column="1" Watermark="Введите название товара" Text="{Binding Name}" Width="300"/>
            <!-- Стоимость -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Стоимость:" VerticalAlignment="Center" Foreground="White"/>
            <aui:NumericUpDown Grid.Row="2" Grid.Column="1" 
                              Value="{Binding Cost}"
                              Watermark="Введите стоимость"
                              FormatString="C2"
                              Minimum="0.01"
                              Maximum="100000"
                              Increment="10"
                              ShowButtonSpinner="True"
                              Width="300"
                              ValueChanged="NumericUpDown_ValueChanged"/>
          </Grid>
          <!-- Сообщение об ошибке -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                    TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,10"/>
          <!-- Кнопка Сохранить -->
          <Button Content="Сохранить изменения" Command="{Binding ChangeOrderItemCommand}" 
                  HorizontalAlignment="Center" Width="200" Height="35" 
                  Background="DarkOrchid" Foreground="White" Margin="0,20"/>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </DockPanel>
</Window>