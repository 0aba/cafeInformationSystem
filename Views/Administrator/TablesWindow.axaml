<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        xmlns:controls="using:cafeInformationSystem.Views.ControlsApp"
        xmlns:vm="using:cafeInformationSystem.ViewModels.Administrator"
        x:DataType="vm:TablesViewModel"
        x:Class="cafeInformationSystem.Views.Administrator.TablesWindow"
        Title="Список столиков"
        Icon="avares://cafeInformationSystem/Assets/cafe-information-system-logo.ico">
  <Design.DataContext>
    <vm:TablesViewModel/>
  </Design.DataContext>
  <DockPanel>
    <!-- Header -->
    <controls:HeaderControl DockPanel.Dock="Top"/>
    <!-- Панель действий -->
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="10">
      <Button Content="Обратно в меню администратора" Command="{Binding BackToAdministratorMenuCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
      <Button Content="Создать столик" Command="{Binding NewTableCommand}" Padding="15,5" Background="DarkOrchid" Foreground="White"/>
    </StackPanel>
    <!-- Основной контент -->
    <Grid Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="0.25*"/>
        <ColumnDefinition Width="10"/>
        <ColumnDefinition Width="0.75*"/>
      </Grid.ColumnDefinitions>
      <!-- Блок фильтрации -->
      <Border Grid.Column="0" Background="#6F4E37" CornerRadius="5" Padding="15">
        <StackPanel Spacing="10">
          <TextBlock Text="Фильтрация столиков" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
          <!-- Код столика -->
          <TextBlock Text="Код столика:" FontWeight="SemiBold"/>
          <TextBox Text="{Binding TableCodeFilter}" Watermark="Введите код столика"/>
          <!-- Логин официанта -->
          <TextBlock Text="Логин официанта:" FontWeight="SemiBold" Margin="0,10,0,0"/>
          <TextBox Text="{Binding UsernameWaiterFilter}" Watermark="Введите логин официанта"/>
          <!-- Статус назначения официанта -->
          <CheckBox Content="С назначенным официантом" 
                    IsChecked="{Binding StatusAssignedWaiterFilter}"
                    Margin="0,10,0,0"/>
          <!-- Ошибки списка -->
          <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" 
                     TextWrapping="Wrap" HorizontalAlignment="Center"/>
          <!-- Кнопка применения фильтров -->
          <Button Content="Применить фильтры" 
                  Command="{Binding ApplyFiltersCommand}"
                  Background="DarkOrchid" 
                  Foreground="White"
                  HorizontalAlignment="Stretch"
                  Margin="0,20,0,0"
                  Padding="10,5"/>
        </StackPanel>
      </Border>
      <!-- Блок списка столиков -->
      <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Background="#6F4E37">
        <Border Margin="30" Background="#6F4E37" CornerRadius="5">
          <StackPanel Spacing="10" Background="#6F4E37">
            <!-- Если список пуст -->
            <TextBlock Text="Список пуст" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,50,0,0"
                      IsVisible="{Binding HasNoTables}"/>
            <!-- Список столиков -->
            <ItemsControl ItemsSource="{Binding Tables}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Background="#666666" 
                          BorderThickness="1" 
                          CornerRadius="5" 
                          Padding="15"
                          Margin="0,0,0,10">
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                      <!-- Информация -->
                      <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TableCode, StringFormat='Код столика: {0}'}" FontSize="14" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="{Binding WaiterService?.Username, StringFormat='Официант: {0}', TargetNullValue='Официант: столик не закреплен'}" FontSize="12" Foreground="Black"/>
                      </StackPanel>
                      <!-- Кнопка перехода к карточке столика -->
                      <Button Grid.Column="2" 
                              Content="Посмотреть карточку" 
                              Command="{Binding $parent[ItemsControl].DataContext.OpenTableCardCommand}"
                              CommandParameter="{Binding TableCode}"
                              Background="DarkOrchid"
                              Foreground="White"
                              BorderThickness="1"
                              Padding="10,5"/>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </Border>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</Window>